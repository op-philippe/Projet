{% extends 'admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block content %}
    <h1>Gestion des utilisateurs</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Roles</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %} {# Boucle qui parcourt tous les utilisateurs #}
            <tr>
                <td>{{ user.id }}</td> {# Insertion de l'id user dans le champ du tableau #}
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.roles }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune page</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Créer un utilisateur</a>
{% endblock %}
