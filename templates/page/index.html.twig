{% extends 'admin.html.twig' %}

{% block title %}Pages{% endblock %}

{% block content %}
    <h1>Gestion des pages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Slug</th>
                <th>IsPublish</th>
                <th>CreateAt</th>
                <th>UpdateAt</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.titre }}</td>
                <td>{{ page.slug }}</td>
                <td>{{ page.isPublish ? 'Oui' : 'Non' }}</td>
                <td>{{ page.createAt ? page.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.updateAt ? page.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('page_show', {'id': page.id}) }}">Voir</a>
                    <a href="{{ path('page_edit', {'id': page.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune page</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('page_new') }}">Cr√©er une page</a>
{% endblock %}
