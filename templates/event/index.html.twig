{% extends 'admin.html.twig' %}

{% block title %}Agenda{% endblock %}

{% block content %}
    <h1>Gestion de l'agenda</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Contenu</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
                <td>{{ event.content }}</td>
                <td>
                    <a href="{{ path('event_show', {'id': event.id}) }}">Voir</a>
                    <a href="{{ path('event_edit', {'id': event.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune page</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('event_new') }}">Créer un évenement dans l'agenda</a>
{% endblock %}
