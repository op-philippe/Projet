{% extends 'admin.html.twig' %}

{% block title %}Liens{% endblock %}

{% block content %}
    <h1>Gestions des liens</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Url</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td>{{ link.id }}</td>
                <td>{{ link.link }}</td>
                <td>{{ link.content }}</td>
                <td>{{ link.url }}</td>
                <td>
                    <a href="{{ path('link_show', {'id': link.id}) }}">Voir</a>
                    <a href="{{ path('link_edit', {'id': link.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune page</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('link_new') }}">Cr√©er un lien</a>
{% endblock %}
