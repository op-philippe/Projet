<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
    <header>
        {% block menu_top %}Bienvenue sur la page d'administration{% endblock %}
    </header>
    <main>
        <aside>
            {% block menu_gauche %}
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-3" id>
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link active" href="{{ path('admin') }}">Administration</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" href="{{ path('article_index') }}">Gestion des articles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('link_index') }}">Gestion des liens</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('event_index') }}">Gestion de l'agenda</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('user_index') }}">Gestion des utilisateurs</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('page_index') }}">Gestions des pages</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </aside>
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-9 offset-3">
                         {% block content %}
                         {% endblock %}
                    </div>
                </div>
            </div>
        </section>
        <section>
            {% block end_content %}

            {% endblock %}
        </section>
    </main>
    <footer>
        {% block footer %}
            <footer class="footer mt-auto py-3">
                <div class="container">
                    <span>Petit Arbre Landais</span>
                </div>
            </footer>
        {% endblock %}
    </footer>

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
