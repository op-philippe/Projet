{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form  method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal" style="color: white;">Identification</h1>
    <label for="inputEmail" style="color: white;">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword" style="color: white;">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>
    <br />
    {# Activation de la sécurité csrf #}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


    {#Décommentez cette section et ajoutez une option Remember_me sous votre pare-feu pour activer la fonctionnalité
    Se souvenir de moi..
    Voir https://symfony.com/doc/current/security/remember_me.html#}

        <div class="checkbox mb-3">
            <label style="color: white;">
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>

    <br />
    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</form>
{% endblock %}
